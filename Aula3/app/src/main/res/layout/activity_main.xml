<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/etconfirmasenha"
            android:hint="Confirme sua senha"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/etsenha" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp" android:layout_marginEnd="14dp"/>
    <TextView
            android:text="Digite suas informações:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="29dp" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etnome"
            android:hint="Informe seu nome"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textWebEmailAddress"
            android:ems="10"
            android:id="@+id/etemail"
            android:hint="E-mail"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/etnome" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/etsenha"
            android:hint="Informe sua senha"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/etemail" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="131dp" app:srcCompat="@drawable/download"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/button" android:layout_marginBottom="178dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="46dp"/>
    <Button
            android:text="Jogar Moeda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toEndOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="41dp" app:layout_constraintBottom_toBottomOf="@+id/imageView"
            android:layout_marginEnd="41dp" android:onClick="mudarDeTela"/>
    <TextView
            android:text="Jogo da Moeda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginStart="149dp" android:layout_marginEnd="149dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/etconfirmasenha"
            app:layout_constraintEnd_toEndOf="@+id/etconfirmasenha" app:layout_constraintStart_toStartOf="parent"
            android:textSize="30sp" app:layout_constraintHorizontal_bias="0.437"/>
</android.support.constraint.ConstraintLayout>